    <div class="carousel-inner" role="listbox">
        @foreach(var i in new[] {1,2,3,4}) {
            var backgroundUrl = $"/images/pattern{i}.svg";
            var cssClass = i == 2 ? "item active" : "item";
        <div class="@cssClass" style="background-image:url(@backgroundUrl); ">
